<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTemplate">


    <Button
        android:id="@+id/Tback"
        android:layout_width="79dp"
        android:layout_height="49dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="戻る"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/TTitle"
        android:layout_width="234dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="題名"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Tback" />

    <EditText
        android:id="@+id/Tmemo"
        android:layout_width="364dp"
        android:layout_height="99dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="メモ"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/FinishedText" />

    <Button
        android:id="@+id/Tapply"
        android:layout_width="71dp"
        android:layout_height="53dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="追加"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <NumberPicker
        android:id="@+id/TsHour"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/StartText"
        app:layout_constraintStart_toEndOf="@+id/StartText"
        app:layout_constraintTop_toTopOf="@+id/StartText"
        app:layout_constraintVertical_bias="0.511" />

    <NumberPicker
        android:id="@+id/TsMinute"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/TextBold"
        app:layout_constraintStart_toEndOf="@+id/TextBold"
        app:layout_constraintTop_toTopOf="@+id/TextBold" />

    <NumberPicker
        android:id="@+id/TeHour"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/FinishedText"
        app:layout_constraintStart_toEndOf="@+id/FinishedText"
        app:layout_constraintTop_toTopOf="@+id/FinishedText" />

    <NumberPicker
        android:id="@+id/TeMinute"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        app:layout_constraintBottom_toBottomOf="@+id/TextBold2"
        app:layout_constraintStart_toEndOf="@+id/TextBold2"
        app:layout_constraintTop_toTopOf="@+id/TextBold2" />

    <TextView
        android:id="@+id/TextBold"
        android:layout_width="25dp"
        android:layout_height="45dp"
        android:text=":"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/TsHour"
        app:layout_constraintStart_toEndOf="@+id/TsHour"
        app:layout_constraintTop_toTopOf="@+id/TsHour" />

    <TextView
        android:id="@+id/TextBold2"
        android:layout_width="26dp"
        android:layout_height="48dp"
        android:text=":"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/TeHour"
        app:layout_constraintStart_toEndOf="@+id/TeHour"
        app:layout_constraintTop_toTopOf="@+id/TeHour" />

    <TextView
        android:id="@+id/StartText"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginStart="56dp"
        android:layout_marginTop="88dp"
        android:text="開始時間"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TTitle" />

    <TextView
        android:id="@+id/FinishedText"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_marginTop="104dp"
        android:text="終了時間"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/StartText"
        app:layout_constraintStart_toStartOf="@+id/StartText"
        app:layout_constraintTop_toBottomOf="@+id/StartText" />


</androidx.constraintlayout.widget.ConstraintLayout>